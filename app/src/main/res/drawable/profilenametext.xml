<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    android:shape="rectangle" >
    <corners
        android:radius="40dp"
        />
    <gradient
        android:angle="45"
        android:centerX="40%"
        android:startColor="@color/k"
        android:centerColor="@color/p"
        android:endColor="@color/k"
        android:type="linear"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
    <size
        android:width="350dp"
        android:height="40dp"
        />
    <stroke
        android:width="5dp"
        android:color="@color/c"
        />
</shape>