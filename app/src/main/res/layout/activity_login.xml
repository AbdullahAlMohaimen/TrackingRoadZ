<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/first"
    android:weightSum="3"
    android:padding="5dp"
    android:orientation="vertical"
    tools:context=".Login">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_margin="5dp"
        android:weightSum="3"
        android:background="@drawable/background_y"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="4dp"
            android:gravity="right">

            <TextView
                android:id="@+id/profileNameTextId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/y"
                android:textStyle="bold"
                android:textSize="22dp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/profilenametext"
                />



            <ImageButton
                android:id="@+id/vehicleInformationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_menu"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_baseline_directions_bike_24" />


            <ImageButton
                android:id="@+id/profileSettingButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_menu"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_baseline_settings_24" />

            <ImageButton
                android:id="@+id/logoutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_menu"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                app:srcCompat="@drawable/logout" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/speedText"
                android:layout_width="wrap_content"
                android:textColor="@color/a"
                android:textStyle="bold"
                android:textSize="50sp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="0.0 Km/h" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchId"
                android:layout_width="200dp"
                android:checked="true"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/a"
                android:layout_marginBottom="10dp"
                android:text="Metric Units" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="3"
        android:layout_margin="5dp"
        android:background="@drawable/background_w"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/staticId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="@color/a"
                android:background="@drawable/circle_button"
                android:drawableTop="@drawable/ic_baseline_description_24"
                android:text="Statics" />
            <Button
                android:id="@+id/mapId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="@color/a"
                android:background="@drawable/circle_button"
                android:drawableTop="@drawable/ic_baseline_map_24"
                android:text="Map" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/vehicleId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="@color/a"
                android:background="@drawable/circle_button"
                android:drawableTop="@drawable/ic_baseline_emoji_transportation_24"
                android:text="Vehicle\ninfo" />
            <Button
                android:id="@+id/locationId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="@color/a"
                android:background="@drawable/circle_button"
                android:drawableTop="@drawable/ic_baseline_add_location_24"
                android:text="Save\nLocation"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/gasStationId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="@color/a"
                android:background="@drawable/circle_button"
                android:drawableTop="@drawable/ic_baseline_local_gas_station_24"
                android:text="Gas\nStation" />
            <Button
                android:id="@+id/exitId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="@color/a"
                android:background="@drawable/circle_button"
                android:drawableTop="@drawable/ic_baseline_exit_to_app_24"
                android:text="Exit" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>