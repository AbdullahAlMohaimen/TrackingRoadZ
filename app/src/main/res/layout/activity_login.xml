<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_v"
    android:weightSum="7"
    android:padding="5dp"
    android:orientation="vertical"
    tools:context=".Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_margin="4dp"
                android:weightSum="3"
                android:background="@drawable/extradesign"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/profileEmailTextId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/g"
                        android:textStyle="bold"
                        android:textSize="22dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:background="@drawable/profilenametext"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:textColor="@color/g"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Total Distance:" />
                    <TextView
                        android:id="@+id/speedtext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:text="Instantaneous Speed:"
                        android:textColor="@color/g"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:textColor="@color/g"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Total Time:" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginBottom="6dp">

                    <Button
                        android:id="@+id/btnStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="28dp"
                        android:textColor="@color/g"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/background_button"
                        android:text="Start"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <Button
                            android:id="@+id/btnPause"
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:textSize="26dp"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:textColor="@color/g"
                            android:background="@drawable/button_z"

                            android:text="Pause"/>
                        <Button
                            android:id="@+id/btnStop"
                            android:layout_width="wrap_content"
                            android:textSize="26dp"
                            android:textStyle="bold"
                            android:textColor="@color/g"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:background="@drawable/button_z"
                            android:text="Stop"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="6dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/checkInternetId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="24dp"
                        android:textColor="@color/a"
                        android:textStyle="bold"
                        android:background="@drawable/internet"
                        android:text="Check Connection" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bikeId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:drawableTop="@drawable/bike"
                            android:background="@drawable/circle"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textSize="24dp"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/g"
                            android:text="Bike"/>

                        <Button
                            android:id="@+id/busId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:drawableTop="@drawable/bus"
                            android:background="@drawable/circle"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textSize="24dp"
                            android:textColor="@color/g"
                            android:text="Bus"/>

                        <Button
                            android:id="@+id/truckId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:drawableTop="@drawable/truck"
                            android:background="@drawable/circle"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textSize="24dp"
                            android:textColor="@color/g"
                            android:text="Truck"/>

                        <Button
                            android:id="@+id/cycleId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:drawableTop="@drawable/cycle"
                            android:background="@drawable/circle"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textSize="24dp"
                            android:textColor="@color/g"
                            android:text="Cycle"/>



                        <Button
                            android:id="@+id/policeStationId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:drawableTop="@drawable/policestation"
                            android:background="@drawable/circle"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textSize="22dp"
                            android:textColor="@color/g"
                            android:text="Police.S"/>

                        <Button
                            android:id="@+id/drivingLicenseId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:drawableTop="@drawable/licenseb"
                            android:background="@drawable/circle"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textSize="22dp"
                            android:textColor="@color/g"
                            android:text="License"/>


                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/staticId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/circle_button"
                        android:drawableTop="@drawable/statica"
                        android:text="Statics"
                        android:textAllCaps="false"
                        android:textColor="@color/a"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/mapId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/circle_button"
                        android:drawableTop="@drawable/getlocationy"
                        android:text="Get Location"
                        android:textAllCaps="false"
                        android:textColor="@color/a"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/vehicleId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/circle_button"
                        android:drawableTop="@drawable/vehicley"
                        android:text="Vehicleinfo"
                        android:textAllCaps="false"
                        android:textColor="@color/a"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/locationId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/circle_button"
                        android:drawableTop="@drawable/savelocationx"
                        android:text="Save Location"
                        android:textAllCaps="false"
                        android:textColor="@color/a"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/gasStationId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/circle_button"
                        android:drawableTop="@drawable/nearbyplacex"
                        android:text="Nearby Place"
                        android:textAllCaps="false"
                        android:textColor="@color/a"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/trackId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/circle_button"
                        android:drawableTop="@drawable/destinationy"
                        android:text="Track On"
                        android:textAllCaps="false"
                        android:textColor="@color/a"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/distanceTwoPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/circle_button"
                        android:drawableTop="@drawable/distanced"
                        android:text="Distance Two Place"
                        android:textAllCaps="false"
                        android:textColor="@color/a"
                        android:textSize="25dp"
                        android:textStyle="bold" />


                    <Button
                        android:id="@+id/touristPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/circle_button"
                        android:drawableTop="@drawable/distanced"
                        android:text="Tourist Place"
                        android:textAllCaps="false"
                        android:textColor="@color/a"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>