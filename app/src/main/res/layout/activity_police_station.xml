        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="28dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/a"
        android:text="Barishal"/>

    <Button
        android:id="@+id/chittagongButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="28dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/a"
        android:text="Chittagong"/>

    <Button
        android:id="@+id/dhakalButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="28dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/a"
        android:text="Dhaka"/>

    <Button
        android:id="@+id/mymensinghButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="28dp"
        android:layout_marginBottom="12dp"
        android:text="Mymensingh"/>

    <Button
        android:id="@+id/khulnalButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="28dp"
        android:layout_marginBottom="12dp"
        android:text="Khulna"/>

    <Button
        android:id="@+id/rajshahiButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="28dp"
